<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mjbpi.proxilend">
    <uses-permission android:name="android.permission.INTERNET"> </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/proxilend_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddActivity"
            android:label="@string/title_add_activity">
        </activity>

        <activity
            android:name=".About"
            android:label="@string/about">
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_login_activity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_profile"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mjbpi.proxilend.MainActivity">
            </meta-data>
        </activity>
    </application>

</manifest>