<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_description"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>

    <TextView
        android:id="@+id/developer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Laurin Rolny"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <TextView
        android:id="@+id/developer_mail_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="laurin.rolny@stud.uni-regensburg.de"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>

    <TextView
        android:id="@+id/developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Michael Pichlmeier"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        />

    <TextView
        android:id="@+id/developer_mail_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="michael.pichlmeier@stud.uni-regensburg.de"
        android:textSize="18sp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

</LinearLayout>